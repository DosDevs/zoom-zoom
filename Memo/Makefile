all: Memo

#
#       FFFF FFFF FFFF FFFF (   1)
#       FFFF FFFF FFFF FFF0 (  16)
#       FFFF FFFF FFFF FF00 ( 256)
#       FFFF FFFF FFFF F000 (  4K)
#       FFFF FFFF FFFF 0000 ( 64K)
#       FFFF FFFF FFF0 0000 (  1M)
#       FFFF FFFF FF00 0000 ( 16M)
#       FFFF FFFF F000 0000 (256M)
#       FFFF FFFF 0000 0000 (  4G)
#       FFFF FFF0 0000 0000 ( 64G)
#       FFFF FF80 0000 0000 (512G)
#       FFFF FF00 0000 0000 (  1T)
#       FFFF F000 0000 0000 ( 16T)
#       FFFF 0000 0000 0000 (256T)
#       FFF0 0000 0000 0000 (  4P)
#       FF80 0000 0000 0000 ( 32P)
#       FF00 0000 0000 0000 ( 64P)
#  15H: F000 0000 0000 0000 (  1H)
#   8H: 8000 0000 0000 0000 (  8H)
#   1H: 1000 0000 0000 0000 ( 15H)
#  64P: 0100 0000 0000 0000
#  32P: 0080 0000 0000 0000
#   4P: 0010 0000 0000 0000
#   1P: 0004 0000 0000 0000
# 256T: 0001 0000 0000 0000
#  16T: 0000 1000 0000 0000
#   1T: 0000 0100 0000 0000
# 512G: 0000 0080 0000 0000
#  64G: 0000 0010 0000 0000
#   4G: 0000 0001 0000 0000
#   1G: 0000 0000 4000 0000
#    0: 0000 0000 0000 0000
#

BASE_ADDRESS=0xfffffffff0000000  # First 16 MiB of top 256 MiB..
